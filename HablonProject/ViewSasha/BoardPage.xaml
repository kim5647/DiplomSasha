<Page x:Class="HablonProject.ViewSasha.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="BoardPage"
      Background="#f5f7f9">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#ffffff" Padding="15" BorderBrush="#e1e4e8" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="Задачи" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Foreground="#24292e"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left"/>

                <Button Content="+ Добавить задание" 
                Margin="15,0,0,0"
                Padding="10,5"
                BorderBrush="#24292e"
                BorderThickness="1"
                Background="Transparent"
                Foreground="#24292e"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                Click="AddTaskButton_Click"/>
            </DockPanel>
        </Border>


        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="BoardStackPanel" Margin="15" />
        </ScrollViewer>
    </Grid>
</Page>
